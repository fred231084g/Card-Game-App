<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".userLogIn.LogInActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="412dp"
        android:layout_height="280dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/logo3"
        android:elevation="36dp"
        android:gravity="center"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="276dp"
        android:layout_height="272dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <EditText
            android:id="@+id/logInEmailText"
            android:layout_width="276dp"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_backgroud"
            android:backgroundTint="@color/design_default_color_surface"
            android:ems="10"
            android:hint="@string/email_address"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"

            />

        <EditText
            android:id="@+id/LogInPasswordText"
            android:layout_width="265dp"
            android:layout_height="48dp"
            android:layout_marginTop="41dp"
            android:background="@drawable/edit_text_backgroud"
            android:backgroundTint="@color/design_default_color_surface"
            android:ems="10"
            android:hint="@string/fui_password_hint"
            android:inputType="textPassword"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/registerLayoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Register"
            android:textColor="#FF4081"
            android:textSize="16sp" />

        <Button
            android:id="@+id/loginB"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/pink_rect_normal"
            android:text="@string/string_login_b_text"
            android:textColor="#212121" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>